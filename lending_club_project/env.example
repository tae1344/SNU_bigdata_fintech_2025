# Lending Club 신용평가 모델링 프로젝트 환경 설정
# 이 파일을 .env로 복사하여 실제 환경 변수를 설정하세요

# 환경 설정
ENVIRONMENT=development

# 데이터 설정
DATA_SAMPLE_SIZE=10000
RANDOM_SEED=42

# 모델링 설정
TEST_SIZE=0.2
VALIDATION_SIZE=0.2
CROSS_VALIDATION_FOLDS=5

# 특성 선택 설정
MAX_FEATURES=30
CORRELATION_THRESHOLD=0.8
VIF_THRESHOLD=10

# 모델 하이퍼파라미터
XGBOOST_LEARNING_RATE=0.1
XGBOOST_MAX_DEPTH=6
XGBOOST_N_ESTIMATORS=100

LIGHTGBM_LEARNING_RATE=0.1
LIGHTGBM_MAX_DEPTH=6
LIGHTGBM_N_ESTIMATORS=100

# 금융 모델링 설정
RISK_FREE_RATE=0.02
LOAN_TERM_MONTHS=36
DEFAULT_RATE_THRESHOLD=0.1

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true

# 성능 설정
N_JOBS=-1
VERBOSE=1 